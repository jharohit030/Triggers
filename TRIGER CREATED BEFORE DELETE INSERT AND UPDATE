CREATE OR REPLACE TRIGGER AMOUNT_CHANGE
BEFORE DELETE OR UPDATE OR INSERT
ON CUSTOMER
FOR EACH ROW
WHEN (NEW.ID>0)
DECLARE
     AMOUNT_DIFF NUMBER;
BEGIN
     AMOUNT_DIFF:=:NEW.AMOUNT-:OLD.AMOUNT;
     DBMS_OUTPUT.PUT_LINE('OLD AMOUNT='||:OLD.AMOUNT);
     DBMS_OUTPUT.PUT_LINE('NEW AMOUNT='||:NEW.AMOUNT);
     DBMS_OUTPUT.PUT_LINE('DIFFERENCE IN BILL='||AMOUNT_DIFF);
END;
