CREATE OR REPLACE TRIGGER AMOUNT_CHANGE
BEFORE DELETE OR UPDATE OR INSERT
ON CUSTOMER
FOR EACH ROW
WHEN (NEW.ID>0)
DECLARE
     AMOUNT_DIFF NUMBER;
BEGIN
     AMOUNT_DIFF:=:NEW.AMOUNT-:OLD.AMOUNT;
     DBMS_OUTPUT.PUT_LINE('OLD AMOUNT='||:OLD.AMOUNT);
     DBMS_OUTPUT.PUT_LINE('NEW AMOUNT='||:NEW.AMOUNT);
     DBMS_OUTPUT.PUT_LINE('DIFFERENCE IN BILL='||AMOUNT_DIFF);
END;
*************INSERT OR UPDATE ON TRIGGER USING IN TABLE*****************
SELECT * FROM CUSTOMER
INSERT INTO CUSTOMER(ID,NAME,AGE,CITY,AMOUNT)
VALUES(10,'MUNNA BHAIYA',50,'MIRZAPUR',100000)

UPDATE CUSTOMER SET AMOUNT=AMOUNT+3000 WHERE ID =1
